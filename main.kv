#:import Factory kivy.factory.Factory
<MyPopup@Popup>
    auto_dismiss: True
    size_hint: 0.9, 0.7
    pos_hint: {"x":0.05, "top": 0.9}
    title: "НОВЫЙ ПРОЕКТ"
    title_align: 'center'

    MDFloatLayout:
        orientation: "vertical"
        size: root.width, root.height

        MDTextField:
            multiline: False
            font_size: "18sp"
            pos_hint: {"x":0.0009, "y": .85}
            hint_text: "Название проекта"
            background_color: [139/255,139/255,139/255,1]
            hint_text_color: [40/255,40/255,40/255,1]

        MDRaisedButton:
            text: "Выберите Лид"
            font_size: "17sp"
            pos_hint: {"x":0.01, "y": 0.75}

        MDRaisedButton:
            text: "Тип Проекта"
            font_size: "17sp"
            pos_hint: {"x":0.54, "y": .75}

        MDRaisedButton:
            text: "Выбрать Дэдлайн"
            font_size: "17sp"
            pos_hint: {'x': .2, 'y': .62}
            on_release: app.show_time_picker()

        MDRaisedButton:
            text: "Выбрать Команду"
            font_size: "17sp"
            pos_hint: {"x":0.18, "y": .49}

        MDRaisedButton:
            text: "Выбрать Договор"
            font_size: "17sp"
            pos_hint: {"x":0.19, "y": .36}

        MDRaisedButton:
            text: "Проектный \n менеджер"
            font_size: "17sp"
            pos_hint: {"x":0.29, "y": .18}

        MDRaisedButton:
            text: "Отмена"
            font_size: 24
            pos_hint: {"x":0.01, "y": .02}
            on_release: root.dismiss()

        MDRaisedButton:
            text: "Добавить"
            font_size: 24
            pos_hint: {"x":0.53, "y": .02}
            on_release: root.dismiss()

<MyLayout>
    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        MDToolbar:
            title: "Kaimak Production"
            title_align: 'center'


        MDTabs:
            id: tabs
            on_tab_switch: app.on_tab_switch(*args)

            Tab:
                text: "Текущие проекты"

                MDFloatingActionButton:
                    id: button
                    icon: "plus"
                    pos_hint: {"center_x": 0.89, "center_y": 0.08}
                    on_release: Factory.MyPopup().open()

            Tab:
                text: "Завершенные проекты"

            Tab:
                text: "Проебанные проекты"

            Tab:
                text: "Общие"


<Tab>
    MDLabel:
        text: root.content_text
        pos_hint: {"center_x": .5, "center_y": .5}